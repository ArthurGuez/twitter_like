<main>

<nav>
    <ul>
        <li>Logo Twitter</li>
        <li>Home</li>
        <li>Explore</li>
        <li>Notifications</li>
        <li>Messages</li>
        <li>Bookmarks</li>
        <li>Lists</li>
        <li>Profile</li>
        <li>More</li>
        <li>Tweet</li>
        <li><a href="/{{ username }}">Mon Profil</a></li>
        <li><a href="/logout">Logout</a></li>
    </ul>
</nav>

<section class="home">

    <h1>Home</h1>
    <h2>Hello {{ username }}</h2>
    <div class="home__publish"></div>
    <form action="/home" method="POST">
        <div>
            <label for="tweet"></label>
            <textarea name="tweet" id="tweet" maxlength="280" placeholder="What's  happening?" required></textarea>   
        </div>
        <button type="submit">Tweeter</button>
    </form>

    <div class="timeline">

    {{#each tweet}}
        <div class="timeline__tweet">

            <div class="timeline__avatar">
                <a href="/{{ username }}">
                    <img src="../assets/images/default_avatar.png" alt="">
                </a>
            </div>
            <div class="timeline__post">
                <div class="timeline__user">
                    <a href="/{{ username }}">@{{ username }}</a>&nbsp. {{ dateFromNow }}
                </div>
                <div class="timeline__content">{{ content }}</div>
            </div>

        </div>
    {{/each}}

    </div>

</section>

<div class="suggestions">
    <div>
        <h2>Who to follow</h2>
        {{#each user}}
            <div>
                <div class="suggestions__avatar">
                    <a href="/{{ username }}">
                        <img src="../assets/images/default_avatar.png" alt="">
                    </a>
                    <div class="timeline__user">
                        <a href="/{{ username }}">@{{ username }}</a>
                    </div>
                    {{#if ../doIFollow}}
                    <div>
                        <form action="/unfollow" method="POST">
                            <input type="hidden" name="unfollow" value={{ id }}>
                            <button type="submit">Unfollow</button>
                        </form>
                    </div>
                    {{else}}
                    <div>
                        <form action="/follow" method="POST">
                            <input type="hidden" name="follow" value={{ id }}>
                            <button type="submit">Follow</button>
                        </form>
                    </div>
                    {{/if}}
                </div>
            </div>
        {{/each}}
    </div>

</div>


</main>